.subtitle
  %b
    Users

= form_for @search_form, :url => yammer_users_path, :html => {:method => :get} do |f|
  = f.search_field :q
  = f.submit 'search'
%br

#users_list
  - if @users.size > 0
    = paginate @users
    %br
    - @users.each do |user|
      .user
        .mugshot
          = image_tag user['mugshot_url'], :align => 'left'
        .full_name
          = link_to user['full_name'], show_yammer_users_path(user['id'])
        %br{:clear => 'left'}
        %br
    %br
    = paginate @users

